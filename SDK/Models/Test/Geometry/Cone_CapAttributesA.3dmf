	Container (
		Cone (
			0  4  0		# orientation
			0  0  1		# majorRadius
			3  0  0		# minorRadius
			0 -2  0		# origin
			0.85		# uMin
			0.15		# uMax
			0			# vMin
			0.6			# vMax
		)
		Caps ( Bottom | Interior )
		Container (
			BottomCapAttributeSet ()
			Container (
				AttributeSet ()
				DiffuseColor  ( 1 0 0 )
			)
		)
		Container (
			FaceCapAttributeSet ()
			Container (
				AttributeSet ()
				DiffuseColor  ( 0 0 1 )
			)
		)
		Container (
			InteriorCapAttributeSet ()	# Interior cap, not supported by QD3D
			Container (
				AttributeSet ()
				DiffuseColor  ( 1 1 0 )
			)
		)
		Container (
			AttributeSet ()
			SpecularColor  ( 1 0 1 )
			DiffuseColor  ( 0 1 1 )
		)
	)
